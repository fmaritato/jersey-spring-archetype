<archetype xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype/1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype/1.0.0 http://maven.apache.org/xsd/archetype-1.0.0.xsd">

    <id>jersey-spring-archetype</id>

    <allowPartial>true</allowPartial>

    <sources>
        <source>src/main/java/SampleResource.java</source>
    </sources>

    <resources>
        <resource>src/main/webapp/WEB-INF/web.xml</resource>
        <resource>src/main/resources/spring.cfg.xml</resource>
        <resource>.gitignore</resource>
    </resources>

    <testSources>
        <source>src/test/java/SampleResourceTest.java</source>
    </testSources>

    <testResources>
        <resource>src/test/resources/log4j.xml</resource>
    </testResources>

</archetype>
